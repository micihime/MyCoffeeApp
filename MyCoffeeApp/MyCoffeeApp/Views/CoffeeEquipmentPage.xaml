<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:MyCoffeeApp.ViewModels"
             x:Class="MyCoffeeApp.Views.CoffeeEquipmentPage"
             x:DataType="viewmodels:CoffeeEquipmentViewModel"> <!--compiled bindings - increases performance and gives compile time checks-->

    <ContentPage.BindingContext> <!-- get intellisense inside xaml-->
        <viewmodels:CoffeeEquipmentViewModel/>
    </ContentPage.BindingContext>

    <ListView BackgroundColor="Transparent"> <!--has its own scrolling ability - DO NOT PUT INTO SCROLLVIEW-->
        <ListView.ItemsSource>
            <x:Array Type="{x:Type x:String}">
                <x:String>Item 1</x:String>
                <x:String>Item 2</x:String>
                <x:String>Item 3</x:String>
            </x:Array>
        </ListView.ItemsSource>
    </ListView>
</ContentPage>